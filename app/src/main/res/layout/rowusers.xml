<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <RelativeLayout
        android:id="@+id/rvPrefix"
        android:layout_width="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/userrowbg"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tvPrefix"
            android:layout_width="wrap_content"
            android:text="G"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textColor="@color/headerColor"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvusername"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rvPrefix"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rvPrefix"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:text="Georgina"
        android:textColor="@color/headerColor"/>

    <ImageView
        android:id="@+id/nextclickbtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingLeft="320dp"
        android:src="@drawable/nextclickbtn"
        app:layout_constraintBottom_toBottomOf="@id/rvPrefix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


















